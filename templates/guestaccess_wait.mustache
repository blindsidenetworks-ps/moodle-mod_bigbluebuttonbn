{{!
    @template mod_bigbluebuttonbn/guestaccess_wait

    This template renders the waiting screen on the BBB guest access page.

    Example context (json):
    {
        "name": "My BigBlueButton room",
        "pinginterval": 5000
    }
}}
<div class="bigbluebuttonbn-guestaccess-wait row justify-content-center">
    <div class="col-xl-4 col-lg-6 col-sm-8 mb-5">
        <h1>{{name}}</h1>
        <p class="mb-3">{{#str}}guestaccess_join_waiting, bigbluebuttonbn{{/str}}</p>
    </div>
</div>
{{#js}}
    setTimeout(
        function() {
            window.location.reload();
        }, {{pinginterval}}
    );
{{/js}}
