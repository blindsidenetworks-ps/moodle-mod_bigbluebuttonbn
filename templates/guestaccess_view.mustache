{{!
    @template mod_bigbluebuttonbn/guestaccess_view

    This template renders the guest access link widgets on the BBB guest access page.

    Example context (json):
    {
        "name": "My BigBlueButton room",
        "guestlinkpassenabled": true
    }
}}
<div class="bigbluebuttonbn-guestaccess-view row justify-content-center">
    <div class="col-xl-4 col-lg-6 col-sm-8">
        <h1>{{name}}</h1>
        <p class="mb-3">{{#str}}guestaccess_join_welcome, bigbluebuttonbn{{/str}}</p>
        <hr />
        <form action="{{action}}" id="guestaccessform" method="get">
            <input type="hidden" name="gid" value="{{gid}}" />
            <div class="form-group">
                <label for="guestname">{{#str}}guestaccess_guestname_label, bigbluebuttonbn{{/str}}</label>
                <input type="text" class="form-control{{#guestnameerror}} is-invalid{{/guestnameerror}}" name="guestname" id="guestname" maxlength="50"{{#guestname}} value="{{guestname}}{{/guestname}}" />
                {{#guestnameerror}}
                    <div class="form-text text-danger">{{#str}}guestaccess_join_error_nousername, bigbluebuttonbn{{/str}}</div>
                {{/guestnameerror}}
            </div>
            {{#guestlinkpassenabled}}
                <div class="form-group">
                    <label for="guestlinkpass">{{#str}}guestaccess_guestlinkpass_label, bigbluebuttonbn{{/str}}</label>
                    <input type="text" class="form-control{{#guestlinkpasserror}} is-invalid{{/guestlinkpasserror}}" name="guestlinkpass" id="guestlinkpass" maxlength="6"{{#guestlinkpass}} value="{{guestlinkpass}}{{/guestlinkpass}}" />
                    {{#guestlinkpasserror}}
                        <div class="form-text text-danger">{{#str}}guestaccess_join_error_wrongpassword, bigbluebuttonbn{{/str}}</div>
                    {{/guestlinkpasserror}}
                </div>
            {{/guestlinkpassenabled}}
            <button type="submit" class="btn btn-primary btn-block" id="submit">{{#str}}guestaccess_join_button, bigbluebuttonbn{{/str}}</button>
        </form>
    </div>
</div>
